@model UpdateExpenseDTO

<form asp-action="update" asp-controller="expense">
    <div class="row d-flex justify-content-center mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="StatuId" />
        <input type="hidden" asp-for="CreatedDate" />
		<div class="row d-flex justify-content-center mt-3">

			<div class="col-lg-10">
				<h1>Update Expense</h1>

				<div class="form-group">
					<label asp-for="ExpenseTypeId" class="form-label mt-4">@Html.DisplayNameFor(x=>x.ExpenseTypeId)</label>
					<select asp-for="ExpenseTypeId" class="custom-select" asp-items="@Html.GetEnumSelectList<ExpenseTypeEnumVM>()">
						<option>Please select a Expense Type</option>
					</select>
				</div>

				<div class="form-group">
					<label asp-for="ExpenseDate" class="form-label">Expense Date</label>
					<input asp-for="ExpenseDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")">
					<span asp-validation-for="ExpenseDate"></span>
				</div>

				<div class="row">
					<div class="form-group col-lg-6">
						<label asp-for="Amount" class="form-label">Amount</label>
						<input asp-for="Amount" id="id" class="form-control" pattern="\d*" type="text" placeholder="Amount">
						<span asp-validation-for="Amount"></span>
					</div>

					<div class="form-group col-lg-6">
						<label asp-for="CurrencyTypeId" class="form-label">@Html.DisplayNameFor(x=>x.CurrencyTypeId)</label>
						<select asp-for="CurrencyTypeId" class="custom-select" asp-items="@Html.GetEnumSelectList<CurrencyTypeEnumVM>()">
							<option>Select Currency Type</option>
						</select>
					</div>
				</div>

				<div class="form-group">
					<label asp-for="ShortDescription" class="form-label">@Html.DisplayNameFor(x=>x.ShortDescription)</label>
					<textarea asp-for="ShortDescription" class="form-control" placeholder="Please write a short description here" id="floatingTextarea"></textarea>

				</div>
				<div class="form-group">
					<label asp-for="LongDescription" class="form-label">@Html.DisplayNameFor(x=>x.LongDescription)</label>
					<textarea asp-for="LongDescription" class="form-control" placeholder="Please write a long description here" id="floatingTextarea2"></textarea>
				</div>
			</div>
		</div>

    <div class="form-group d-flex justify-content-end mt-3">
        <input type="submit" value="Update" class="btn btn-primary" />
        <div class="col-lg-1"></div>
    </div>
</form>