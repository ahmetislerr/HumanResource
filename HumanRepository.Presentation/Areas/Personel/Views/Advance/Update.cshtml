@model UpdateAdvanceDTO

<form asp-action="update" asp-controller="advance">
    <div class="row d-flex justify-content-center mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="StatuId" />
        <input type="hidden" asp-for="CreatedDate" />
        <div class="col-lg-10">
            <div class="form-group">
                <label asp-for="Amount" class="form-label">Amount</label>
                <input asp-for="Amount" class="form-control" type="text">
                <span class="text-danger" asp-validation-for="Amount"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfInstallments" class="form-label">NumberOfInstallments</label>
                <input asp-for="NumberOfInstallments" class="form-control" type="text">
                <span class="text-danger" asp-validation-for="NumberOfInstallments"></span>
            </div>

        </div>
    </div>

    <div class="form-group d-flex justify-content-end mt-3">
        <input type="submit" value="Update" class="btn btn-primary" />
        <div class="col-lg-1"></div>
    </div>
</form>