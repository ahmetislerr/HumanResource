@using HumanResource.Application.Models.DTOs.ExpenseDTO;
@using HumanResource.Application.Models.VMs.ExpenseVM;
@model CreateExpenseDTO

<div class="modal fade" id="createLeaveModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-l">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">New message</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form asp-action="create" asp-controller="expense">
					<div class="row d-flex justify-content-center mt-3">

						<div class="col-lg-10">
							<div class="form-group">
								<label asp-for="ExpenseTypeId" class="form-label mt-4">@Html.DisplayNameFor(x=>x.ExpenseTypeId)</label>
								<select asp-for="ExpenseTypeId" class="custom-select" asp-items="@Html.GetEnumSelectList<ExpenseTypeEnumVM>()">
									<option>Please select a Expense Type</option>
								</select>
							</div>
							<div class="form-group">
								<label asp-for="ExpenseDate" class="form-label">Expense Date</label>
								<input asp-for="ExpenseDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")">
								<span asp-validation-for="ExpenseDate"></span>
							</div>

							<div class="form-group">
								<label asp-for="Amount" class="form-label">Amount</label>
								<input asp-for="Amount" id="id" class="form-control" pattern="\d*" type="text" placeholder="Amount">
								<span asp-validation-for="Amount"></span>
							</div>

							<div class="form-group">
								<label asp-for="CurrencyTypeId" class="form-label mt-4">@Html.DisplayNameFor(x=>x.CurrencyTypeId)</label>
								<select asp-for="CurrencyTypeId" class="custom-select" asp-items="@Html.GetEnumSelectList<CurrencyTypeEnumVM>()">
									<option>Please select a Currency Type</option>
								</select>
							</div>

							<div class="form-floating">
								<textarea class="form-control" placeholder="Please write a short description here" id="floatingTextarea"></textarea>
								<label for="floatingTextarea">Comments</label>
							</div>
						</div>
					</div>

					<div class="form-group d-flex justify-content-end mt-3">
						<input type="submit" value="Create" class="btn btn-primary" />
						<div class="col-lg-1"></div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

