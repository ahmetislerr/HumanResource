@model CompanyDetailsVM

<div class="row d-flex justify-content-center">
    <div class="card m-3 col-lg-3 p-0">
        <h3 class="card-header bg-info text-white">Company Information</h3>
        <ul class="list-group list-group-flush ">
            <li class="list-group-item   border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.CompanyName) :</strong> @(Model.CompanyName)</li>
            <li class="list-group-item  border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.TaxNumber) :</strong> @(Model.TaxNumber)</li>
            <li class="list-group-item  border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.TaxOfficeName) :</strong> @(Model.TaxOfficeName)</li>
            <li class="list-group-item  border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.PhoneNumber) :</strong> @(Model.PhoneNumber)</li>
            <li class="list-group-item  border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.NumberOfEmployee) :</strong> @(Model.NumberOfEmployee)</li>
            <li class="list-group-item  border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.City) :</strong> @(Model.City)</li>
            <li class="list-group-item  border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.District) :</strong> @(Model.District)</li>
            <li class="list-group-item  border-bottom border-warning"><strong>@Html.DisplayNameFor(x => x.AddressDescription) :</strong> @(Model.AddressDescription)</li>
            <a class="btn btn-primary m-2" asp-area="siteadmin" asp-action="list" asp-controller="siteadmin">Back List</a>
            </li>
        </ul>
    </div>
</div>